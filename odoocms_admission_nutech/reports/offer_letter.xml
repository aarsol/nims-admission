<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_offer_letter">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="applicant">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <style>
                                .container{
                                text-align: justify;
                                text-justify: inter-word;
                                font-size: 14px;
                                font-family: Arial, Helvetica, sans-serif;
                                }
                            </style>
                            <div class="container">
                                <div class="row" id="header">
                                    <div class="col-3">
                                        <div class="col-3 mt-3" style="text-align: center">
                                            <img src='/odoocms_admission_nutech/static/src/img/nutech.png'
                                                 style="max-width: 170px; height: 160px;" alt="logo"/>
                                        </div>
                                    </div>
                                    <div class="col-8" style="text-align: left; margin-top:30px; margin-left: 0px;">
                                        <h3>
                                            <b>University of Central Punjab</b>
                                        </h3>
                                        <h5>
                                            <b>The Centre of Your Future</b>
                                        </h5>
                                    </div>
                                </div>
                                <div class="row mt-2" id="ref">
                                    <div class="col-4" style="text-align: left;">
                                        <strong>
                                            <span>Ref No:</span>
                                        </strong>
                                        <span>
                                            <t t-esc="applicant.applicant_id.application_no"/>
                                        </span>
                                    </div>
                                    <div class="col-8" style="text-align: right;">
                                        <strong>
                                            <span>Date:</span>
                                        </strong>
                                        <span>
                                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <strong>
                                            <span>Name:</span>
                                        </strong>
                                        <span>
                                            <t t-esc="applicant.applicant_id.name"/>
                                        </span>
                                    </div>
                                    <div class="col-6" style="text-align: right;">
                                        <strong>
                                            <span>Class Start Date:</span>
                                        </strong>
                                        <span>
                                            <t t-esc="applicant.program_id.commencement_class_date"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <strong>
                                            <u>
                                                <span>Subject:</span>
                                            </u>
                                        </strong>
                                        <strong>
                                            <u>
                                                <span>
                                                    Offer of Admission in
                                                    <span>
                                                        <t t-esc="applicant.program_id.discipline_id.name"/>
                                                    </span>
                                                    <span>
                                                        (<t t-esc="applicant.program_id.name"/>)
                                                    </span>
                                                </span>
                                            </u>
                                        </strong>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <span>
                                            It is my pleasure to inform you that you have been selected for admission in
                                            the
                                            <strong>
                                                <span>
                                                    <t t-esc="applicant.program_id.discipline_id.name"/>
                                                </span>
                                                <span>(<t t-esc="applicant.program_id.name"/>)
                                                </span>
                                            </strong>
                                            program
                                            for the
                                            <span>
                                                <t t-esc="applicant.applicant_id.register_id.name"/>
                                            </span>
                                            semester which will commence from
                                            <span>
                                                <t t-esc="applicant.program_id.date"/>
                                            </span>
                                            . Heartiest
                                            Congratulations!
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <span style="text-size: 14px;">
                                            <t t-raw="applicant.program_id.description"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="footer">
                                    <div class="row"
                                         style="border: 1px solid black; height: 30px; background-color: #00294f; color: white;">
                                        <div class="col-4">
                                            <span>+92 80 000 827</span>
                                        </div>
                                        <div class="col-3" style="text-align: center; color: white;">
                                            <span>admissions@nutech.edu.pk</span>
                                        </div>
                                        <div class="col-5" style="text-align: center; color: white;">
                                            <span>1, Khayaban-e-Jinnah, Johar Town, Lahore</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>