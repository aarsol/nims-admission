<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="admission_offer_letter_view_form" model="ir.ui.view">
        <field name="name">admission_offer_letter_view_form</field>
        <field name="model">admission.offer.letter</field>
        <field name="arch" type="xml">
            <form string="nutech Offer Letter">
                <sheet>
                    <widget name="web_ribbon" title="Offer Letter" bg_color="bg-success"/>
                    <h3 style="text-align: center;">Offer Letter</h3>
                    <group>
                        <group>
                            <field name="applicant_id" required="1"/>
                            <field name="reference_no" invisible="1"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="program_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="admission_offer_letter_view_tree" model="ir.ui.view">
        <field name="name">admission_offer_letter_view_tree</field>
        <field name="model">admission.offer.letter</field>
        <field name="arch" type="xml">
            <tree string="nutech Offer Letter">
                <field name="applicant_id" required="1"/>
                <field name="reference_no"/>
                <field name="program_id"/>
            </tree>
        </field>
    </record>
    <record id="suffa_offer_letter_action" model="ir.actions.act_window">
        <field name="name">Offer Letter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">admission.offer.letter</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem
            id="suffa_offer_menu"
            name="Offer Letter"
            sequence="36"
            parent="odoocms_admission.menu_odoocms_admission_root"
    />
    <menuitem
            id="suffa_offer_letter_menu"
            name="Offer Letter"
            action="suffa_offer_letter_action"
            sequence="10"
            parent="suffa_offer_menu"
    />
</odoo>