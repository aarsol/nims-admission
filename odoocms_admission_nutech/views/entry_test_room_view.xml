<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="entry_test_room_view_form" model="ir.ui.view">
        <field name="name">entry_test_view_form</field>
        <field name="model">odoocms.entry.test.room</field>
        <field name="arch" type="xml">
            <form string="Entry Test Room">
                <sheet>
                    <widget name="web_ribbon" title="Entry Test Room" bg_color="bg-success"/>
                    <h3 style="text-align: center;">Entry Test Room</h3>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="capacity"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="entry_test_room_view_tree" model="ir.ui.view">
        <field name="name">entry_test_room_view_tree</field>
        <field name="model">odoocms.entry.test.room</field>
        <field name="arch" type="xml">
            <tree string="Entry Test Room">
                <field name="name"/>
                <field name="capacity"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="entry_test_room_action" model="ir.actions.act_window">
        <field name="name">Entry Test Room</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoocms.entry.test.room</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem
            id="entry_test_room_setup_menu"
            name="Entry Test Room Setup"
            sequence="250"
            parent="odoocms_admission.menu_admission_configuration"
    />
    <menuitem
            id="entry_test_room_menu"
            name="Entry Test Room"
            action="entry_test_room_action"
            sequence="260"
            parent="entry_test_room_setup_menu"
    />
</odoo>