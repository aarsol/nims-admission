<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="last_institute_view_form" model="ir.ui.view">
        <field name="name">last_institute_view_form</field>
        <field name="model">last.institute.attend</field>
        <field name="arch" type="xml">
            <form string="Last Institute">
                <sheet>
                    <widget name="web_ribbon" title="Last Institute Attend" bg_color="bg-success"/>
                    <h3 style="text-align: center;">Last Institute Attend</h3>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="last_institute_view_tree" model="ir.ui.view">
        <field name="name">last_institute_view_tree</field>
        <field name="model">last.institute.attend</field>
        <field name="arch" type="xml">
            <tree string="Last Institute">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="last_institute_action" model="ir.actions.act_window">
        <field name="name">Last Institute Attend</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">last.institute.attend</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem
            id="last_institute_menu"
            name="Last Institute Attend"
            parent="odoocms_admission.menu_admission_configuration"
            action="last_institute_action"
            groups="odoocms.group_cms_manager"
            sequence="330"/>
</odoo>