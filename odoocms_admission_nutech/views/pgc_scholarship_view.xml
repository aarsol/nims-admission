<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pgc_scholarship_view_form" model="ir.ui.view">
        <field name="name">pgc_scholarship_view_form</field>
        <field name="model">applicant.pgc.scholarship</field>
        <field name="arch" type="xml">
            <form string="PGC Scholarship">
                <sheet>
                    <widget name="web_ribbon" title="PGC Scholarship" bg_color="bg-success"/>
                    <h3 style="text-align: center;">PGC Scholarship</h3>
                    <group>
                        <group>
                            <field name="previous_school_attend" required="1"/>
                            <field name="pgc_registration_no"/>
                        </group>
                        <group>
                            <field name="pgc_institute_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="pgc_scholarship_view_tree" model="ir.ui.view">
        <field name="name">pgc_scholarship_view_tree</field>
        <field name="model">applicant.pgc.scholarship</field>
        <field name="arch" type="xml">
            <tree string="PGC Scholarship">
                <field name="previous_school_attend"/>
                <field name="pgc_registration_no"/>
                <field name="pgc_institute_id"/>
            </tree>
        </field>
    </record>
    <record id="pgc_scholar_action" model="ir.actions.act_window">
        <field name="name">PGC Institute</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">applicant.pgc.scholarship</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem
            id="pgc_scholarship_menu"
            name="PGC Scholarship"
            action="pgc_scholar_action"
            sequence="220"
            parent="scholarship_menu"
    />
</odoo>