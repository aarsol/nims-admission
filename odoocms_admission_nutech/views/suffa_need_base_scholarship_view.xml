<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="need_base_scholarship_view_form" model="ir.ui.view">
        <field name="name">need_base_scholarship_view_form</field>
        <field name="model">applicant.need.base.scholarship</field>
        <field name="arch" type="xml">
            <form string="PGC Scholarship">
                <sheet>
                    <widget name="web_ribbon" title="Need Base Scholarship" bg_color="bg-success"/>
                    <h3 style="text-align: center;">Need Base Scholarship</h3>
                    <group>
                        <group>
                            <field name="guardian_occupation" required="1"/>
                            <field name="guardian_monthly_income"/>
                            <field name="family_member"/>
                        </group>
                        <group>
                            <field name="guardian_job_status"/>
                            <field name="residential_status"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="need_base_scholarship_view_tree" model="ir.ui.view">
        <field name="name">need_base_scholarship_view_tree</field>
        <field name="model">applicant.need.base.scholarship</field>
        <field name="arch" type="xml">
            <tree string="Need Base Scholarship">
                <field name="guardian_occupation"/>
                <field name="guardian_monthly_income"/>
                <field name="family_member"/>
                <field name="guardian_job_status"/>
                <field name="residential_status"/>
            </tree>
        </field>
    </record>
    <record id="need_base_scholar_action" model="ir.actions.act_window">
        <field name="name">Need Base Scholarship</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">applicant.need.base.scholarship</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!--     This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem
            id="scholarship_menu"
            name="Scholarship"
            sequence="200"
            parent="odoocms_admission.menu_admission_configuration"
    />
    <menuitem
            id="need_base_scholarship_menu"
            name="Need Base Scholarship"
            action="need_base_scholar_action"
            sequence="210"
            parent="scholarship_menu"
    />
</odoo>