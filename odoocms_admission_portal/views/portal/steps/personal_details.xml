<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="personal_details" name="Personal Details">
        <div style='display: contents'>
            <!-- header tabb -->
            <div class="ml-3 mr-3 header_tab diable_header_tab mt-0 p-2" onclick="$('#collapse1').slideToggle(1000); $('#angle_class1').toggleClass('fa-angle-down fa-angle-up');">
                <a class="btn btn-link">
                    <i style='color: white;font-size: 25px;' class="fa fa-user-circle float-left"></i>
                    <h2 style='color:white' class="float-left"> &#160;&#160;<t t-esc="step.name"/>
                    </h2>
                </a>
                <a>
                    <i id='angle_class1' class="fas fa-angle-down float-right p-0 m-0" style="font-size: 40px; cursor: pointer;color: white"></i>
                </a>
            </div>
            <!-- body part -->
            <div id="collapse1" class="row container-fluid mt-3 collapse_div">
                <br/>
                <!-- coulmn one -->
                <div class='col-8'>
                    <form id='personal_detail_form' class="row g-3">

                        <input type='hidden' name='step_name' value='personal'></input>
                        <input type="hidden" name="step_no" t-att-value='counter_step' />


                        <!-- geting first name, middle name,last name  -->
                        <div class="mb-1 col-md-4 pb-2">
                            <input id="first_name" required='1' t-att-value='application_id.first_name' name='first_name' type="text" class="form-control inputText validate_char" />
                            <span class="floating-label">First Name</span>
                        </div>
                        <div class="mb-1 col-md-4 pb-2">
                            <input id="middle_name" t-att-value='application_id.middle_name' name='middle_name' type="text" class="form-control inputText validate_char" />
                            <span class="floating-label-norequired">Middle Name</span>
                        </div>
                        <div class="mb-1 col-md-4 pb-2">
                            <input id="last_name" required="1" t-att-value='application_id.last_name' name='last_name' type="text" class="form-control inputText validate_char" />
                            <span class="floating-label">Last Name</span>
                        </div>
                        <!--  -->

                        <!-- geting nationality,province and and domicile  -->
                        <div class="mb-1 col-md-4 pb-2">
                            <select style='pointer-events:none' aria-disabled='1' readonly='1' placeholder='Country' required="1" class="form-control inputText" id="nationality" name="nationality">
                                <!-- <option disabled='1' selected='1' value=''>Select Nationality</option> -->
                                <t t-foreach="country_id" t-as="c">
                                    <t t-if="application_id.nationality.id==c.id">
                                        <option t-att-value='c.id' t-att-selected="application_id.nationality.id==c.id" t-att-id='c.id'>
                                            <t t-esc="c.name"/>
                                        </option>
                                    </t>
                                </t>
                            </select>
                            <label class='floating-label' for="nationality">Nationality</label>
                        </div>
                        <div id='province_div' class="mb-1 col-md-4 pb-2">
                            <select required="1" placeholder='Province' class="form-control inputText required" id="province_id" name="province_id">
                                <option disabled='1' selected='1' value=''>Select Province</option>
                                <t t-foreach="province_id" t-as="p">
                                    <option t-att-value='p.id' t-att-selected='application_id.province_id.id==p.id' t-att-id='p.id'>
                                        <t t-esc="p.name"/>
                                    </option>
                                </t>
                            </select>
                            <label class='floating-label' for="province">Province</label>
                        </div>
                        <div id='province2_div' class="mb-fs1 col-md-8">
                            <input type="text" t-att-value='application_id.province2' id='province2' name='province2' placeholder="Province/State" class="form-control inputText"/>
                        </div>
                        <div id='domicile_div' class="mb-1 col-md-4 pb-2">
                            <select required="1" placeholder='Domicile' class="form-control inputText required" id="domicile_id" name="domicile_id">
                                <option disabled='1' selected='1' value=''>Select Domicile</option>
                                <t t-foreach="domicile_id" t-as="d">
                                    <option t-att-selected='application_id.domicile_id.id==d.id' t-att-value='d.id'>
                                        <t t-esc="d.name"/>
                                    </option>
                                </t>
                            </select>
                            <label class='floating-label' for="domicile">Domicile</label>
                        </div>
                        <!--  -->

                        <!-- geting cnic ,dob and gender -->
                        <div id='cnic_div' class="mb-1 col-md-4 pb-2">
                            <input type="text" data-inputmask-clearincomplete="true" data-inputmask="'mask': '99999-9999999-9'" required='1' t-att-value='application_id.cnic' id='cnic' name='cnic' class="form-control inputText "/>
                            <span class="floating-label">CNIC</span>
                        </div>
                        <div id='passport_div' style='display: none;' class="mb-1 col-md-4 pb-2">
                            <input type="number" required='1' t-att-value='application_id.passport' id='passport' name='passport' class="form-control inputText "/>
