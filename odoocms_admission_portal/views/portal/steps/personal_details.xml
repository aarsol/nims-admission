                                    </t>
                                </select>
                                <label class='floating-label' for="father_status">Father Education</label>
                            </div>

                            <div class="mb-1 col-md-4 pb-2" t-attf-style="{{'display:none' if application_id.father_status=='deceased' else 'display:block' }}">
                                <select  class="form-control inputText" id="father_profession" name="father_profession">
                                    <option selected='1' value=''>Select Father Profession</option>
                                    <t t-foreach="profession_id" t-as="profession">
                                        <option t-att-selected='profession.id==application_id.father_profession.id' t-att-value="profession.id">
                                            <t t-esc="profession.name"/>
                                        </option>
                                    </t>
                                </select>
                                <label class='floating-label' for="father_status">Father Profession</label>
                            </div>
                        </div>
