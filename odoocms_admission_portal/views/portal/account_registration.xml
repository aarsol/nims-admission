<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="account_registration" name="Account Registration">
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css"/>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="/odoocms_admission_portal/static/js/jquery-mask.js"></script>

        <link rel="stylesheet" type="text/css" href="/odoocms_admission_portal/static/css/account_registration.css"/>
        <script type="text/javascript" src="/odoocms_admission_portal/static/js/account_registration.js"></script>
        <style>
            #mytab li{
                cursor: pointer;
            }

        </style>


        <div class="container register">
            <div class="row">
                <div class="col-md-3 register-left">
                    <img t-att-src="image_data_uri(company.logo) if company and company.logo else ''" alt="No Logo"/>
                    <h3>Welcome</h3>
                    <p>
                        <t t-esc="company.name if company and company.name else ''"/>
                    </p>
                    <!-- <input type="submit" name="" value="Login"/> -->
                    <br/>
                </div>
                <div class="col-md-9 register-right">
                    <ul class="nav nav-tabs nav-justified" id="myTab">
                        <li class="nav-item">
                            <a class="nav-link active">Sign in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab">Sign up</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show p-0" id="signup" role="tabpanel" aria-labelledby="signup-tab">
                            <h3 class="register-heading">Sign Up</h3>
                            <form method='POST' action='/web/admission/signup'>
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                <div class="row register-form">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="text" name='first_name' tabindex="1" class="form-control" required="1" placeholder="First Name" />
                                        </div>
                                        
                                        <div class="form-group">
                                            <input type="email" tabindex="3" class="form-control" name='email' placeholder="Email *" value="" />
                                        </div>


                                        <div class="form-group">
                                            <select class="form-control" tabindex="7" name='career_id' required="1">
                                                <option class="hidden" value='' selected='1' disabled='1'>Admission Applying For</option>
                                                <t t-foreach="career_id" t-as="career">
                                                    <option t-att-value='career.id'>
                                                        <t t-esc="career.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <select class="form-control" tabindex="7" id='country_id_signup' name='country_id_signup' >
                                                <option class="hidden" value='' selected='1' disabled='1'>Country</option>
                                                <t t-foreach="country_id" t-as="country">

                                                    <option t-att-value='country.id' t-att-selected='country.id == 177 '>
                                                        <t t-esc="country.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        
                                        <div class="form-group">
                                            <input type="text" data-inputmask-clearincomplete="true" data-inputmask="'mask': '99999-9999999-9'" tabindex="9" name="cnic" id='cnic' required="1"  class="form-control validate_number" placeholder="CNIC *  (81111-2323232-2)" />
                                        </div>
                                   
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="text" name='last_name' tabindex="2" class="form-control" required="1" placeholder="Last Name" />
                                        </div>
                                        
                                        <div class="form-group">
                                            <input type="text" data-inputmask-clearincomplete="true" data-inputmask="'mask': '0399-9999999'" tabindex="4" name="phone" class="form-control validate_number" placeholder="Mobile *  (03000000000)" />
                                        </div>
                                        
                                        <div class="form-group">
                                        <select class="form-control" tabindex="8" id='international_student' name='international_student' required="1">
                                            <option class="hidden" value='' selected='1' disabled='1'>International Student</option>
                                            <option value='national'>No</option>
                                            <option value='international'>Yes</option>

                                        </select>
                                        </div>
                                             
                                        <div class="form-group">
                                            <div class="maxl">
                                                <label class="radio inline">
                                                    <input type="radio" name="gender" value="m" checked='1'/>
                                                    <span> Male </span>
                                                </label>
                                                <label class="radio inline">
                                                    <input type="radio" name="gender" value="f"/>
                                                    <span>Female </span>
                                                </label>
                                                <label class="radio inline">
                                                    <input type="radio" name="gender" value="o"/>
                                                    <span>Other </span>
                                                </label>
                                            </div>
                                        </div>

                                        <input type="submit" class="btnRegister mt-5" value="Register"/>
                                    </div>

                                </div>
                            </form>

                        </div>

                        <!-- signup page -->
                        <div class="tab-pane fade show active" id="signin" role="tabpanel" aria-labelledby="profile-tab">
                            <h3 class="register-heading">Sign In</h3>
                            <form role="form" t-attf-action="/web/login/admission/" method="post" onsubmit="this.action = this.action + location.hash">
                                <div class="row register-form">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="text" name='login' class="form-control" required="1" placeholder="Login" />
                                        </div>

                                    </div>
                                    <div class="col-md-6 pb-5 mb-5">
                                        <div class="form-group">
                                            <input type="password" name='password' required="1" class="form-control" placeholder="Password *" value="" />
                                        </div>
                                        <p style='color: red' class="alert alert-danger" t-if="error" role="alert">
                                            <t t-esc="error"/>
                                        </p>
                                        <p style='color: #3CC3BD' class="alert alert-success" t-if="message" role="status">
                                            <t t-esc="message"/>
                                        </p>
                                        <br/>
                                        <input type="submit" class="btnRegister" value="Login"/>
                                    </div>
                                    <a href="/web/reset_password">Reset Password</a>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                $(":input").inputmask();
                
            </script>

        </div>
    </template>

</odoo>