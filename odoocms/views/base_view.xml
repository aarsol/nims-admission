                            <field name="name"/>
                            <field name="usage"/>
                        </group>
                        <group>
                            <field name="in_use"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Selection Values" name="selection_values">
                            <field name="fields_ids">
