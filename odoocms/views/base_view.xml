    <record id="view_odoocms_selections_tree" model="ir.ui.view">
        <field name="name">odoocms.selections.tree</field>
        <field name="model">odoocms.selections</field>
        <field name="arch" type="xml">
            <tree string="Selections">
                <field name="name"/>
                <field name="usage"/>
                <field name="in_use"/>
            </tree>
        </field>
    </record>
    <record id="view_odoocms_selections_form" model="ir.ui.view">
        <field name="name">odoocms.selections.form</field>
        <field name="model">odoocms.selections</field>
        <field name="arch" type="xml">
            <form string="Selections">
                <sheet>
