<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="view_users_tree" model="ir.ui.view">
        <field name="name">res.users.tree</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <field name="login_date" position="before">
                <field name="user_type"/>
                <field name="student_id" readonly="1" optional="hide"/>
                <field name="faculty_staff_id" readonly="1" optional="hide"/>
                <field name="employee_id" readonly="1" optional="hide"/>
            </field>
        </field>
    </record>

     <record id="view_company_form" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="favicon" position="after">
                <field name="identifier"/>
            </field>
        </field>
    </record>

    <record id="view_users_form" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <group name="messaging" position="before">
                <group>
                    <field name="user_type"/>
                    <field name="student_id"
                       attrs="{'invisible': [('user_type','!=','student')]}"/>
                    <field name="faculty_staff_id"
                       attrs="{'invisible': [('user_type','!=','faculty')]}"/>
                    <field name="employee_id" readonly="0"
                       attrs="{'invisible': [('user_type','!=','employee')]}"/>
                </group>
            </group>
            <page name="access_rights" position="after">
                <page name="programs" string="Programs">
                    <field name="program_ids" nolabel="1"/>
                </page>
                <page name="batches" string="Batches">
                    <field name="batch_ids" nolabel="1"/>
                </page>

            </page>
        </field>
    </record>

    <record id="res_users_view_form" model="ir.ui.view">
        <field name="name">res.users.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="hr.res_users_view_form"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="replace"/>
        </field>
    </record>


    <record id="view_users_search" model="ir.ui.view">
        <field name="name">res.users.search</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_search"/>
        <field name="arch" type="xml">
            <field name="share" position="before">
                <field name="login"/>
            </field>
            <filter name="no_share" position="after">
                <filter name="yes_share" string="External Users" domain="[('share','!=',False)]"/>
                <filter name="students" string="Students" domain="[('user_type','=','student')]"/>
                <filter name="faculty" string="Faculty" domain="[('user_type','=','faculty')]"/>
                <filter name="employees" string="Employeess" domain="[('user_type','=','employee')]"/>
                <separator/>
                <filter name="user_type" string="User Type" context="{'group_by': 'user_type'}"/>
            </filter>
        </field>
    </record>

    <!-- Semester -->
    <record id="view_odoocms_semester_tree" model="ir.ui.view">
        <field name="name">odoocms.semester.tree</field>
        <field name="model">odoocms.semester</field>
        <field name="arch" type="xml">
            <tree string="Semester" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="number"/>
<!--                <field name="color" widget="color" optional="show"/>-->
            </tree>
        </field>
    </record>

    <record id="action_odoocms_semester" model="ir.actions.act_window">
        <field name="name">Semester</field>
        <field name="res_model">odoocms.semester</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Semester here.
            </p>
        </field>
    </record>

    <!-- Week Days -->
    <record id="view_odoocms_week_day_tree" model="ir.ui.view">
        <field name="name">odoocms.week,day.tree</field>
        <field name="model">odoocms.week.day</field>
        <field name="arch" type="xml">
            <tree string="Week Days" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="number"/>
<!--                <field name="color" widget="color" optional="show"/>-->
            </tree>
        </field>
    </record>

    <record id="action_odoocms_week_day" model="ir.actions.act_window">
        <field name="name">Week Days</field>
        <field name="res_model">odoocms.week.day</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Week Day here.
            </p>
        </field>
    </record>

    <!-- Building -->
    <record id="view_facility_building_tree" model="ir.ui.view">
        <field name="name">odoocms.building.tree</field>
        <field name="model">odoocms.building</field>
        <field name="arch" type="xml">
            <tree string="Building">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="institute_id" string="Institute/Faculty"/>
                <field name="location_x"/>
                <field name="location_y"/>
            </tree>
        </field>
    </record>
    <record id="view_facility_building_form" model="ir.ui.view">
        <field name="name">odoocms.building.form</field>
        <field name="model">odoocms.building</field>
        <field name="arch" type="xml">
            <form string="Building">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="location_x"/>
                            <field name="location_y"/>
                            <field name="institute_id" string="Institute/Faculty"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Floors">
                            <field name="floor_ids" nolabel="1"/>
                        </page>
                        <page string="Rooms">
                            <field name="room_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="open_building_view_action" model="ir.actions.act_window">
        <field name="name">Building</field>
        <field name="res_model">odoocms.building</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Building here.
            </p>
        </field>
    </record>

    <!-- Building Floor -->
    <record id="view_facility_building_floor_tree" model="ir.ui.view">
        <field name="name">odoocms.building.floor.tree</field>
        <field name="model">odoocms.building.floor</field>
        <field name="arch" type="xml">
            <tree string="Building Floor">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="building_id"/>
            </tree>
        </field>
    </record>
    <record id="view_facility_building_floor_form" model="ir.ui.view">
        <field name="name">odoocms.building.floor.form</field>
        <field name="model">odoocms.building.floor</field>
        <field name="arch" type="xml">
            <form string="Building Floor">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="building_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Rooms">
                            <field name="room_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="open_building_floor_view_action" model="ir.actions.act_window">
        <field name="name">Building Floor</field>
        <field name="res_model">odoocms.building.floor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Building Floor here.
            </p>
        </field>
    </record>


    <!-- Class Room -->
    <record id="view_odoocms_room_tree" model="ir.ui.view">
        <field name="name">odoocms.room.tree</field>
        <field name="model">odoocms.room</field>
        <field name="arch" type="xml">
            <tree string="Class Room">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="building_id"/>
                <field name="capacity"/>
                <field name="exam_capacity"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>
    <record id="view_odoocms_room_form" model="ir.ui.view">
        <field name="name">odoocms.room.form</field>
        <field name="model">odoocms.room</field>
        <field name="arch" type="xml">
            <form string="Class Room">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="building_id"
                                options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                        <group>
                            <field name="capacity"/>
                            <field name="exam_capacity"/>
                        </group>
                        <group>
                            <field name="room_type"/>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="area"/>
                            <field name="floor_id"/>
                            <field name="rows"/>
                            <field name="cols"/>
                        </group>
                    </group>

                    <group colspan="4">
                        <field name="feature_ids">
                            <tree string="Facilities">
                                <field name="name"/>
                                <field name="qty"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_odoocms_room_search" model="ir.ui.view">
        <field name="name">odoocms.room.search</field>
        <field name="model">odoocms.room</field>
        <field name="arch" type="xml">
            <search string="Component Class">
                <field name="name"/>
                <field name="code"/>
                <field name="building_id"/>
                <field name="room_type"/>
                <newline/>
                <group expand="0" string="Group By...">
                    <filter name="building_grp" string="Building" domain="[]"
                            context="{'group_by':'building_id'}"/>
                    <filter name="room_type_grp" string="Room Type" domain="[]" context="{'group_by':'room_type'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_odoocms_room" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">odoocms.room</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Class Room here.
            </p>
        </field>
    </record>

