<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_odoocms_academic_term_form" model="ir.ui.view">
        <field name="name">odoocms.academic.term.form.odoocms</field>
        <field name="model">odoocms.academic.term</field>
        <field name="inherit_id" ref="odoocms_base.view_odoocms_academic_term_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Term Schedule" name="term_lines_page">
                    <div class="alert alert-info" role="alert" style="margin-bottom:0px;"
                        attrs="{'invisible': [('line_cnt', '=', 0)]}">
                        The System will scan the Schedules in Sequence and will apply the first Schedule that will satisfy the Conditions out of
                        <b><field name="line_cnt" readonly="1"/></b> defined Schedule.
                    </div>
                    <field name="term_lines">
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="name" required="1"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </tree>
                    </field>
                </page>
                <page string="Public Holidays">
                    <field name="pubilc_holidays_ids">
                        <tree editable="bottom">
                            <field name="name" required="1"/>
                            <field name="date" required="1"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record id="view_odoocms_academic_term_line_tree" model="ir.ui.view">
        <field name="name">odoocms.academic.term.line.tree</field>
        <field name="model">odoocms.academic.term.line</field>
        <field name="arch" type="xml">
            <tree string="Term Schedule">
                <field name="sequence" widget="handle"/>
                <field name="name" required="1"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>
    <record id="view_odoocms_academic_term_line_form" model="ir.ui.view">
        <field name="name">odoocms.academic.term.line.form</field>
        <field name="model">odoocms.academic.term.line</field>
        <field name="arch" type="xml">
            <form string="Term Schedule">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="term_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert" style="margin-bottom:0px;">
                        <ul>
                            <li>Multiple Parameters can be defined Such as Campus, Institute/Faculty, Career/Degree Level, Programs and Batches.</li>
                            <li>System will scan all defined parameters in sequence, and if at any defined parameter condition fails, then will return False</li>
                            <li>On scan of all defined parameters, if No condition fails, then system will return True</li>
                            <li>In case of True, the Schedule will be selected, and subsequent schedules will not be scanned</li>
                        </ul>
                    </div>
                    <group>
                        <field name="campus_ids" widget="many2many_tags"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        <field name="institute_ids" widget="many2many_tags" domain="[('campus_id','in',campus_ids)]"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        <field name="career_ids" widget="many2many_tags"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        <field name="program_ids" widget="many2many_tags"
                            domain="[('institute_id','in',institute_ids),('career_id','in',career_ids)]"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        <field name="batch_ids" widget="many2many_tags" domain="[('program_id','in',program_ids)]"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                    </group>
                    <!--<group>
                        <field name="domain" widget="domain" options="{'model': 'odoocms.batch', 'in_dialog': True}"/>
                    </group>-->

                    <notebook>
                        <page name='term_planning' string="Term Planning">
                            <field name="planning_ids">
                                <tree editable="bottom">
                                    <field name="type"/>
                                    <field name="name"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="date_start_admin"/>
                                    <field name="date_end_admin"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="type"/>
                                            </group>
                                            <group>
                                                <field name="date_start"/>
                                                <field name="date_end"/>
                                            </group>
                                            <group>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
<!--                        <page string="Description" name="description">-->
<!--                            <group>-->
<!--                                <field name="description" placeholder="Enter the Description"/>-->
<!--                            </group>-->
<!--                        </page>-->
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_odoocms_academic_term_line" model="ir.actions.act_window">
        <field name="name">Term Schedule</field>
        <field name="res_model">odoocms.academic.term.line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <!--        <field name="search_view_id" ref="view_odoocms_academic_term_line_search"/>-->
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Define Academic Term Details here.
            </p>
        </field>
    </record>

    <menuitem
            id="menu_odoocms_academic_term_line"
            name="Term Schedule"
            parent="odoocms_base.menu_odoocms_term_setup"
            action="action_odoocms_academic_term_line"
            sequence="30"/>

