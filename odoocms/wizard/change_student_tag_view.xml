<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="view_odoocms_student_tag_change" model="ir.ui.view">
			<field name="name">odoocms.student.tag.change</field>
			<field name="model">odoocms.student.tag.change</field>
			<field name="arch" type="xml">
				<form string="Change Student Tag">
					<group>
						<group>
							<field name="action" required="True"/>
							<field name="tag_id" required="True"
								options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
						</group>
						<group>
							<field name="date_effective" required="1"/>
						</group>
					</group>
					<group>
						<field name="description" required="1"/>
					</group>
					<notebook>
						<page string="Students">
							<group>
								<field name="student_ids">
									<tree string="Students">
										<field name="code" />
										<field name="name" />
										<field name="gender"/>
										<field name="email"/>
										<field name="mobile"/>
										<field name="program_id" />
										<field name="semester_id" />
										<field name="state" invisible="1"/>
									</tree>
								</field>
							</group>
						</page>
					</notebook>
					<footer>
						<button name="change_student_tag" string="Add/ Remove Tag" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
			   </form>
			</field>
		</record>

		<record id="act_odoocms_change_student_tag" model="ir.actions.act_window">
            <field name="name">Change Student Tag</field>
            <field name="res_model">odoocms.student.tag.change</field>
			<field name="binding_model_id" ref="odoocms.model_odoocms_student"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

