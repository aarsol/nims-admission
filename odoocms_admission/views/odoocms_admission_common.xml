<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id='view_odoocms_reject_reason_form_view' model='ir.ui.view'>
            <field name="name">odoocms.application.reject.reason.form</field>
            <field name="model">odoocms.application.reject.reason</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id='odoocms_reject_reason_tree_view' model='ir.ui.view'>
            <field name="name">odoocms.application.reject.reason.tree</field>
            <field name="model">odoocms.application.reject.reason</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_odoocms_reject_reason" model="ir.actions.act_window">
            <field name="name">Reject Reasons</field>
            <field name="res_model">odoocms.application.reject.reason</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create the First reject reason here.
                </p>
            </field>
        </record>

        <record id="view_application_board_form" model="ir.ui.view">
            <field name="name">odoocms.application.board.form</field>
            <field name="model">odoocms.application.board</field>
            <field name="arch" type="xml">
                <form string="Board">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="sh_name"/>
                                <field name="code"/>
                                <field name="city_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id='odoocms_application_board_tree_view' model='ir.ui.view'>
            <field name="name">odoocms.application.board.tree</field>
            <field name="model">odoocms.application.board</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sh_name"/>
                    <field name="code"/>
                    <field name="city_id"/>
                </tree>
            </field>
        </record>

        <record id="action_odoocms_application_board" model="ir.actions.act_window">
            <field name="name">Examination Boards</field>
            <field name="res_model">odoocms.application.board</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the First city here.
                </p>
            </field>
        </record>

        <record id='odoocms_application_passing_year_tree_view' model='ir.ui.view'>
            <field name="name">odoocms.application.passing.year.tree</field>
            <field name="model">odoocms.application.passing.year</field>
            <field name="arch" type="xml">
                <tree editable="bottom" delete="false">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="matric"/>
                    <field name="inter"/>
                </tree>
            </field>
        </record>

        <record id="action_odoocms_application_passing_year" model="ir.actions.act_window">
            <field name="name">Passing Years</field>
            <field name="res_model">odoocms.application.passing.year</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create the First Passing Year here.
                </p>
            </field>
        </record>

        <record id='view_odoocms_degree_tree' model='ir.ui.view'>
            <field name="name">odoocms.degree.tree</field>
            <field name="model">odoocms.degree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="career_id"
                           options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                </tree>
            </field>
        </record>

        <record id='view_odoocms_degree_form' model='ir.ui.view'>
            <field name="name">odoocms.degree.form</field>
            <field name="model">odoocms.degree</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="eligibilty_percentage"/>
                            <field name="eligibilty_cgpa"/>
                            <field name="specialization_id"/>
                        </group>
                        <group>
                            <field name="career_id"
                                   options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="degree_id" required="1"/>
                            <field name="eligibilty_per"/>
                            <field name="eligibilty_cgp"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="programs" string="Programs">
                            <group>
                                <field name="program_ids"
                                       options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}">
                                    <tree ediable="bottom">
                                        <field name="name"/>
                                        <field name="name"/>
                                        <field name="career_id"
                                               options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_odoocms_program_form" model="ir.ui.view">
            <field name="name">odoocms.program.form</field>
            <field name="model">odoocms.program</field>
            <field name="inherit_id" ref="odoocms_base.view_odoocms_program_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='campus_id']" position="after">
                    <field name="pre_test"/>
                </xpath>
                <page name="specialization" position="after">
                    <page name="degree" string="Eligible Degrees">
                        <group>
                            <field name="degree_ids"
                                   options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}">
                                <tree ediable="bottom">
                                    <field name="name"/>
                                    <field name="career_id"
                                           options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Admission Details">
                        <group>
                            <group>
                                <field name="prospectus_registration_fee"/>
                                <field name="signup_end_date"/>
                            </group>
                            <group>
                                <field name="prospectus_program_fee_date"/>
                                <field name="signin_end_date"/>
                            </group>
                            <group>
                                <field name="admission_due_date"/>
                            </group>
                            <group>
                                <field name="commencement_class_date"/>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record id="action_odoocms_degree" model="ir.actions.act_window">
            <field name="name">Degree</field>
            <field name="res_model">odoocms.degree</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create the your First Degree here.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_education_reject_reason"
                name="Reject Reason"
                parent="menu_admission_configuration"
                action="action_odoocms_reject_reason"
                groups="odoocms_admission.group_admission_manager"
