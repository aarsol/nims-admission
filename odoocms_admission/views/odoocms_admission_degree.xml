<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="admission_degree_view_form" model="ir.ui.view">
        <field name="name">admission.degree.view.form</field>
        <field name="model">odoocms.admission.degree</field>
        <field name="arch" type="xml">
            <form string="Education_admission_form">
                <sheet>
                    <widget name="web_ribbon" title="Academic Degree" bg_color="bg-success"/>
                    <h3 style="text-align: center;">Academic Degree</h3>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="year_age" required="1"/>
                            <field string='Degree Level' name="admission_education_id" required="1"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Specialization">
                            <field name="specialization_ids">
                                <tree 
                                widget="one2many" edit="false" create='false'
                                >
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="admission_degree_view_tree" model="ir.ui.view">
        <field name="name">admission.degree.view.tree</field>
        <field name="model">odoocms.admission.degree</field>
        <field name="arch" type="xml">
            <tree string="admission_education_tree">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="admission_degree_action" model="ir.actions.act_window">
        <field name="name">Academic Degree</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoocms.admission.degree</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Your Degree.
            </p>
        </field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem
            id="admission_degree_menu"
            name="Academic Degree"
            parent="menu_odoocms_academic_setup"
            action="admission_degree_action"
            groups="odoocms_admission.group_admission_manager"
            sequence="140"/>
</odoo>