<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_odoocms_admission_test_series_tree" model="ir.ui.view">
            <field name="name">odoocms.admission.test.series.tree</field>
            <field name="model">odoocms.admission.test.series</field>
            <field name="arch" type="xml">
                <tree string="Entry Test Series">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_odoocms_admission_test_series_form" model="ir.ui.view">
            <field name="name">odoocms.admission.test.series.form</field>
            <field name="model">odoocms.admission.test.series</field>
            <field name="arch" type="xml">
                <form string="Entry Test Series">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="register_id"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Test Center">
                                <field name="test_center_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="test_type"/>
                                        <field name="code"/>
                                        <field name="session"/>
                                        <field name="series"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Applicant">
                                <field name="applicant_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="cnic"/>
                                        <field name="passport"/>
                                        <field name="date_of_birth"/>
                                        <field name="gender"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <!--<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>-->
                </form>
            </field>
        </record>
        <record id="action_odoocms_admission_test_series" model="ir.actions.act_window">
            <field name="name">Test Series</field>
            <field name="res_model">odoocms.admission.test.series</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Your Test Series here.
                </p>
            </field>
        </record>

        <menuitem
                id="odoocms_test_series"
                name="Academic Test"
                parent="menu_admission_configuration"
                groups="odoocms_admission.group_admission_manager"
                sequence="170"/>
        <!--<menuitem
                id="action_odoocms_test_series"
                name="Test Series"
                parent="odoocms_test_series"
                action="action_odoocms_admission_test_series"
                groups="odoocms_admission.group_admission_manager"
                sequence="180"/>-->
        <!--        groups="odoocms.group_cms_manager,odoocms_admission.group_admission_manager"-->
    </data>
</odoo>